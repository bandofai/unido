{
  "name": "@unido/monorepo",
  "version": "0.1.0",
  "private": true,
  "description": "Unido - Provider-agnostic TypeScript framework for AI applications",
  "packageManager": "pnpm@10.17.1",
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev --parallel",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "format": "biome format --write .",
    "format:check": "biome format .",
    "type-check": "turbo run type-check",
    "clean": "turbo run clean && rm -rf node_modules .turbo",
    "test": "turbo run test"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@vitest/ui": "^2.1.8",
    "c8": "^10.1.3",
    "turbo": "^2.3.3",
    "typescript": "^5.7.3",
    "vitest": "^2.1.8"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  }
}
