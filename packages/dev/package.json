{
  "name": "@bandofai/unido-dev",
  "version": "0.1.6",
  "description": "Unido Dev - Development server and tools for widget development",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "public"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "type-check": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "clean": "rm -rf dist *.tsbuildinfo",
    "prepublishOnly": "pnpm run build"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/bandofai/unido.git",
    "directory": "packages/dev"
  },
  "bugs": {
    "url": "https://github.com/bandofai/unido/issues"
  },
  "homepage": "https://github.com/bandofai/unido#readme",
  "author": "Tomas Kavka <iam@tomaskavka.cz>",
  "license": "MIT",
  "keywords": [
    "unido",
    "dev",
    "development",
    "widget",
    "server"
  ],
  "dependencies": {
    "@bandofai/unido-core": "^0.1.6",
    "@bandofai/unido-provider-base": "^0.1.7",
    "@modelcontextprotocol/sdk": "^1.0.6",
    "vite": "^6.0.5",
    "@vitejs/plugin-react": "^4.3.4",
    "chokidar": "^4.0.3"
  },
  "peerDependencies": {
    "@bandofai/unido-core": "^0.1.6",
    "@bandofai/unido-provider-base": "^0.1.7",
    "react": "^18.0.0",
    "react-dom": "^18.0.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.49.1",
    "@testing-library/react": "^16.1.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@types/node": "^24.9.1",
    "@types/react": "^18.3.18",
    "@types/react-dom": "^18.3.5",
    "@vitest/ui": "^2.1.8",
    "happy-dom": "^15.11.7",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "typescript": "^5.7.3",
    "vitest": "^2.1.8"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
