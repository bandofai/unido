{
  "name": "@bandofai/unido-core",
  "version": "0.1.13",
  "description": "Unido Core - Provider-agnostic framework for building AI applications",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./app.js": {
      "types": "./dist/app.d.ts",
      "import": "./dist/app.js"
    },
    "./tool.js": {
      "types": "./dist/tool.d.ts",
      "import": "./dist/tool.js"
    },
    "./schema.js": {
      "types": "./dist/schema.d.ts",
      "import": "./dist/schema.js"
    },
    "./component.js": {
      "types": "./dist/component.d.ts",
      "import": "./dist/component.js"
    },
    "./types.js": {
      "types": "./dist/types.d.ts",
      "import": "./dist/types.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist *.tsbuildinfo",
    "prepublishOnly": "pnpm run build",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/bandofai/unido.git",
    "directory": "packages/core"
  },
  "bugs": {
    "url": "https://github.com/bandofai/unido/issues"
  },
  "homepage": "https://github.com/bandofai/unido#readme",
  "author": "Tomas Kavka <iam@tomaskavka.cz>",
  "license": "MIT",
  "keywords": [
    "unido",
    "ai",
    "openai",
    "chatgpt",
    "framework",
    "tools",
    "mcp"
  ],
  "dependencies": {
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@types/node": "^22.18.9",
    "typescript": "^5.7.3",
    "vitest": "^2.1.8"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
