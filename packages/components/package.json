{
  "name": "@bandofai/unido-components",
  "version": "0.2.9",
  "description": "Unido Components - shadcn/ui components for AI applications",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./globals.css": "./src/globals.css"
  },
  "files": [
    "dist",
    "src/globals.css"
  ],
  "scripts": {
    "build": "tsc && pnpm run build:css",
    "build:css": "postcss ./src/globals.css -o ./dist/globals.css --minify",
    "dev": "concurrently \"tsc --watch\" \"postcss ./src/globals.css -o ./dist/globals.css --watch\"",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist *.tsbuildinfo src/**/*.js src/**/*.js.map src/**/*.d.ts src/**/*.d.ts.map",
    "storybook": "storybook dev -p 6006",
    "storybook:build": "storybook build",
    "storybook:test": "test-storybook"
  },
  "dependencies": {
    "@radix-ui/react-label": "^2.1.2",
    "@radix-ui/react-select": "^2.1.4",
    "@radix-ui/react-slot": "^1.1.1",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.468.0",
    "tailwind-merge": "^2.6.0",
    "tailwindcss-animate": "^1.0.7"
  },
  "devDependencies": {
    "@bandofai/unido-core": "workspace:^0.1.3",
    "@chromatic-com/storybook": "^4.1.2",
    "@storybook/addon-a11y": "^10.0.8",
    "@storybook/addon-themes": "^10.0.8",
    "@storybook/react-vite": "^10.0.8",
    "@tailwindcss/postcss": "^4.1.16",
    "@types/react": "^19.2.6",
    "@types/react-dom": "^18.3.5",
    "autoprefixer": "^10.4.20",
    "concurrently": "^9.1.2",
    "postcss": "^8.4.49",
    "postcss-cli": "^11.0.1",
    "react": "^19.2.0",
    "react-dom": "^18.3.1",
    "storybook": "^10.0.8",
    "tailwindcss": "^4.1.16",
    "typescript": "^5.7.3",
    "vite": "^6.4.0"
  },
  "peerDependencies": {
    "react": "^18.0.0",
    "react-dom": "^18.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/bandofai/unido.git",
    "directory": "packages/components"
  },
  "bugs": {
    "url": "https://github.com/bandofai/unido/issues"
  },
  "homepage": "https://github.com/bandofai/unido#readme",
  "author": "Tomas Kavka <iam@tomaskavka.cz>",
  "license": "MIT",
  "keywords": [
    "unido",
    "components",
    "ui",
    "react",
    "ai"
  ]
}
