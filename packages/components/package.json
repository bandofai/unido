{
  "name": "@bandofai/unido-components",
  "version": "0.1.6",
  "description": "Unido Components - Universal UI components for AI applications",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./globals.css": "./dist/globals.css"
  },
  "files": [
    "dist",
    "src/globals.css"
  ],
  "scripts": {
    "build": "tsc && pnpm run build:css",
    "build:css": "tailwindcss -i ./src/globals.css -o ./dist/globals.css --minify",
    "dev": "concurrently \"tsc --watch\" \"tailwindcss -i ./src/globals.css -o ./dist/globals.css --watch\"",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist *.tsbuildinfo src/**/*.js src/**/*.js.map src/**/*.d.ts src/**/*.d.ts.map"
  },
  "dependencies": {
    "@radix-ui/react-label": "^2.1.2",
    "@radix-ui/react-select": "^2.1.4",
    "@radix-ui/react-slot": "^1.1.1",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.468.0",
    "tailwind-merge": "^2.6.0",
    "tailwindcss-animate": "^1.0.7"
  },
  "devDependencies": {
    "@bandofai/unido-core": "workspace:^0.1.3",
    "@types/react": "^18.3.18",
    "@types/react-dom": "^18.3.5",
    "autoprefixer": "^10.4.20",
    "concurrently": "^9.1.2",
    "postcss": "^8.4.49",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "tailwindcss": "^3.4.17",
    "typescript": "^5.7.3"
  },
  "peerDependencies": {
    "react": "^18.0.0",
    "react-dom": "^18.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/bandofai/unido.git",
    "directory": "packages/components"
  },
  "bugs": {
    "url": "https://github.com/bandofai/unido/issues"
  },
  "homepage": "https://github.com/bandofai/unido#readme",
  "author": "Tomas Kavka <iam@tomaskavka.cz>",
  "license": "MIT",
  "keywords": [
    "unido",
    "components",
    "ui",
    "react",
    "ai"
  ]
}
